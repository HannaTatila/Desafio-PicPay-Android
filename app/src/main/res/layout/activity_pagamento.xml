<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context=".apresentacao.pagamento.PagamentoActivity">

    <ImageButton
            android:id="@+id/botao_voltar_pagamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_botao_voltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="@color/colorAccent"
    />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_foto_contato"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cartao_credito"/>

    <TextView
            android:id="@+id/text_username_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_foto_contato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/corFonteBranca"
            android:text="Nome do fulano"/>

    <LinearLayout
            android:id="@+id/linear_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_username_contato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_cifrao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="@color/corHintCinzaEscuro"
                android:text="R$"/>

        <me.abhinay.input.CurrencyEditText
                android:id="@+id/currencyedit_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/corHintCinzaEscuro"
                android:hint="0,00"
                android:inputType="number"
                android:textSize="54sp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linear_valor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/text_numero_cartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginRight="6dp"
                android:textColor="@color/corFonteBranca"
                android:text="Mastercard 1234 * "/>

        <TextView
                android:id="@+id/link_editar_cartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:text="EDITAR"
                android:textAllCaps="true"/>

    </LinearLayout>

    <Button
            android:id="@+id/button_pagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_margin="16dp"
            android:background="@drawable/shape_botao"
            android:text="Pagar"
            android:enabled="false"/>


</android.support.constraint.ConstraintLayout>