<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tela_pagamento"
        tools:context=".apresentacao.pagamento.PagamentoActivity">

    <ImageButton
            android:id="@+id/botao_voltar_pagamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_botao_voltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="@color/colorAccent"
            android:contentDescription="@string/descricao_botao_voltar"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_foto_contato"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cartao_credito"/>

    <TextView
            android:id="@+id/text_username_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_foto_contato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/corFonteBranca"
            android:text="teste"
            tools:text="Username do recebedor"/>

    <LinearLayout
            android:id="@+id/linear_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_username_contato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_cifrao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="@color/corHintCinzaEscuro"
                android:text="@string/cifrao"/>

        <me.abhinay.input.CurrencyEditText
                android:id="@+id/currencyedit_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/corHintCinzaEscuro"
                android:hint="@string/valor_zerado"
                android:inputType="number"
                android:textSize="54sp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linear_valor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/text_numero_cartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/corFonteBranca"
                tools:text="Mastercard 1234 * "/>

        <TextView
                android:id="@+id/link_editar_cartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:text="@string/link_editar"
                android:textAllCaps="true"/>

    </LinearLayout>

    <Button
            android:id="@+id/button_pagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/CustomizaBotaoPadrao"
            android:layout_margin="16dp"
            android:text="@string/botao_pagar"
            android:enabled="false"/>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminateDuration="@android:integer/config_mediumAnimTime"
            android:scrollbarFadeDuration="@android:integer/config_mediumAnimTime"
            android:scrollbarDefaultDelayBeforeFade="@android:integer/config_mediumAnimTime"/>


</android.support.constraint.ConstraintLayout>