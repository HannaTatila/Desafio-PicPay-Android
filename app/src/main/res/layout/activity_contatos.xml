<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tela_contatos"
        tools:context=".apresentacao.contatos.ContatosActivity"
        android:padding="18dp"
        android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="60dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                    android:id="@+id/texto_titulo_contatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_contatos"
                    android:textColor="@color/corFonteBranca"
                    android:textSize="30sp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="24dp"
                    android:textStyle="bold"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDark">

                <SearchView
                        android:id="@+id/search_contatos"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_campo_busca"
                        android:queryHint="@string/hint_campo_busca"
                        android:iconifiedByDefault="false"
                        app:queryBackground="@android:color/transparent"
                        android:lines="1"/>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            tools:listitem="@layout/linha_lista_contatos"/>

</android.support.design.widget.CoordinatorLayout>