<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
            android:id="@+id/view_fundo_titulo"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/corBarraCabecalhoRecibo"/>

    <View
            android:id="@+id/viewLinha1"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/corCinzaClaro"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/recibo"/>

    <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toBottomOf="@id/view_fundo_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="20dp"
            android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_foto_contato"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="71dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_launcher_background"/>

        <TextView
                android:id="@+id/txt_username_contato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/corFonteBranca"
                tools:text="Nome do recebedor"/>

        <TextView
                android:id="@+id/txt_data_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/corHintCinzaEscuro"
                tools:text="00/00/0000 às 00:00"/>

        <TextView
                android:id="@+id/txt_numero_transacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/corHintCinzaEscuro"
                tools:text="Transação 1234567"/>

        <View
                android:id="@+id/viewLinha2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="40dp"
                android:background="@color/corHintCinzaEscuro"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt_dados_cartao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/corFonteBranca"
                    tools:text="Cartão Master 0000"/>

            <TextView
                    android:id="@+id/txt_valor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/corFonteBranca"
                    tools:text=" R$ 16,00"/>

        </LinearLayout>

        <View
                android:id="@+id/viewLinha3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/corHintCinzaEscuro"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt_titulo_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/corFonteBranca"
                    android:text="@string/titulo_total_pago"/>

            <TextView
                    android:id="@+id/txt_total_pago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/corFonteBranca"
                    tools:text=" R$ 0,00"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>